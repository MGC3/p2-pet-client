<div class='section-title__container'>
  <div class="section-title__row">
    <h1>Pets</h1>
    {{#if pets}}
    <span>
      <button class="btn-custom btn-custom__primary pet-form__btn">Add another pet</button>
    </span>
    {{/if}}
  </div>
</div>
<div class="pets-grid__container">
  {{#each pets as |pet|}}
  <div data-id="{{pet.id}}" class="pets-card__container pet-show__btn">
    <h1>{{pet.name}}</h1>
  </div>
  {{else}}
  {{> Onboarding }}
  {{/each}}
</div>